# Next.js Client + API Environment Variables
# Copy this file to .env.local and fill in your values

# Frontend URLs (public - accessible in browser)
# NEXT_PUBLIC_API_URL is empty by default (uses same origin for API routes)
# Only set this if you need to use a different API server
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
NEXT_PUBLIC_SEPOLIA_PRIZENFT_ADDRESS=
NEXT_PUBLIC_SEPOLIA_CLAWMACHINE_ADDRESS=
NEXT_PUBLIC_SEPOLIA_GAMETOKEN_ADDRESS=
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Backend/API Variables (server-side only - NOT accessible in browser)
# Network RPC URLs
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
POLYGON_RPC_URL=https://polygon-rpc.com
AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Oracle Private Key (CRITICAL - keep this secret!)
ORACLE_PRIVATE_KEY=

# IPFS/Pinata Configuration
PINATA_JWT=
PINATA_GATEWAY=gateway.pinata.cloud

# OpenAI API Key (for AI image generation)
OPENAI_API_KEY=

# Alchemy API Key (for NFT queries)
ALCHEMY_API_KEY=
