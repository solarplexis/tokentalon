# Environment Variables for Smart Contracts

# Network RPC URLs
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Deployment Account (NEVER commit real private keys!)
PRIVATE_KEY=your_private_key_here

# Etherscan API Keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Oracle Service (Backend signer)
ORACLE_PRIVATE_KEY=your_oracle_private_key_here

# IPFS/Pinata
PINATA_JWT=your_pinata_jwt
PINATA_GATEWAY=your_pinata_gateway_url
