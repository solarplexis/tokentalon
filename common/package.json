{
  "name": "tokentalon-common",
  "version": "0.1.0",
  "description": "Shared types and utilities for TokenTalon",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy-and-sync.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-and-sync.ts --network sepolia",
    "deploy:polygon": "hardhat run scripts/deploy-and-sync.ts --network polygon",
    "deploy": "hardhat run scripts/deploy-and-sync.ts",
    "validate": "ts-node scripts/validate-deployment.ts",
    "validate:sepolia": "ts-node scripts/validate-deployment.ts sepolia",
    "validate:polygon": "ts-node scripts/validate-deployment.ts polygon",
    "addresses": "ts-node scripts/show-addresses.ts",
    "addresses:all": "ts-node scripts/show-addresses.ts all",
    "addresses:sepolia": "ts-node scripts/show-addresses.ts sepolia",
    "addresses:polygon": "ts-node scripts/show-addresses.ts polygon",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:polygon": "hardhat verify --network polygon",
    "node": "hardhat node"
  },
  "keywords": [
    "types",
    "shared",
    "utilities"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "hardhat": "^2.27.0",
    "typescript": "^5.3.3"
  }
}
